{% extends 'FremartecBundle:Layout:layout_pages.html.twig' %}

{% block title %}Comercial{% endblock %}

{% block stylesheets %}
	{{parent()}}
  <link rel="stylesheet" href="{{ asset('bundles/fremartec/dist/cover/cover.css') }}">
  <style type="text/css">
    .navbar-default {
        background-color: #8DC046;
        opacity: 0.9
    }
  </style>
{% endblock %}

{% block logo %}<img src="{{ asset('bundles/fremartec/dist/images/logos/logo2.png') }}" width="120px">{% endblock %}

{% block menu %}
  <li id="menu-two"><a href="#two">Hidraulica</a></li>
  <li id="menu-three"><a href="#three">Bombas</a></li>
  <li id="menu-four"><a href="#five">Contacto</a></li>
{% endblock %}

{% block iconmenu %}
	<li><a href="{{ path('ingenieria') }}" data-toggle="tooltip" data-placement="bottom" title="Ingeniería"><img src="{{asset('bundles/fremartec/dist/images/icons/ico2.png')}}" width="20x"></a></li>
	<li><a href="{{ path('consultora') }}" data-toggle="tooltip" title="Consultora"><img src="{{asset('bundles/fremartec/dist/images/icons/ico3.png')}}" width="20x"></a></li>
  <li><a href="{{ path('home') }}" data-toggle="tooltip" data-placement="bottom" title="Inicio"><i class="glyphicon glyphicon-home"></i></a></li>
{% endblock %}


{% block content %}

{# item 1 #}
<div id="one" class="site-wrapper" style="background-image:url('{{ asset('bundles/fremartec/dist/images/com/bg.jpg') }}');background-size:100% 100%">
    <div class="site-wrapper-inner">
        <div class="cover-container">

        	<div class="inner cover">
          	<h1><img src="{{ asset('bundles/fremartec/dist/images/logos/logo2.png') }}"></h1>
            <p class="lead">
							Fremartec Comercial es el área dedicada a la comercialización
							de insumos de riego, geomembranas y bombas.
							Para nosotros contar con buenos insumos es un factor clave
							para realizar grandes proyectos.
						</p>
        	</div>

        </div>
    </div>
</div>

{# item 2 #}
<div id="two" class="site-wrapper" style="background-color:#fff">
  <div class="site-wrapper-inner">
    <div class="cover-container">

      <div class="inner cover">

        <h1 class="page-header text-left text-info">Title number Two</h1>
        <div class="row">
          <div class="col-md-4">
            <img class="img-circle" width="80%" src="data:image/svg+xml;base64,">
            <br>
            <br>
            <a href="{{ path('comercial') }}" class="badge">Comercial</a>
          </div>
          <div class="col-md-4">
            <img class="img-circle" width="80%" src="data:image/svg+xml;base64,">
            <br>
            <br>
            <a href="{{ path('ingenieria') }}" class="badge">Ingenieria</a>
          </div>
          <div class="col-md-4">
            <img class="img-circle" width="80%" src="data:image/svg+xml;base64,">
            <br>
            <br>
            <a href="{{ path('consultora') }}" class="badge">Consultora</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{# item 3 #}
<div id="three" class="site-wrapper" style="background-color:#fff;color:#000" >
  <div class="site-wrapper-inner">
    <div class="cover-container">

      <div class="inner cover">
        <h1 class="page-header text-left text-info">Title number Four</h1>

          {% set url = path(app.request.attributes.get('_route'))|trim('/') %}
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>titulo</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for i in 1..10 %}
              <tr>
                <td><span class="badge">{{i}}</span></td>
                <td>titulo_{{i}}</td>
                <td><a href="" class="text-muted" data-toggle="modal" data-target="#download" title="download" ng-click="download('primero','comercial')"><i class="fa fa-download text-success"></i>&nbsp;Descargar</a></td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
      </div>

    </div>
  </div>
</div>

{# item 4 #}
<div id="four" class="site-wrapper" style="background-image:url('{{ asset('bundles/fremartec/dist/images/bg3.jpg') }}')">
  <div class="site-wrapper-inner">
    <div class="cover-container" >

      <div class="inner cover">
        <div class="jumbotron" style="background-color:#fff">
          <img src="{{ asset('bundles/fremartec/dist/images/mapa.png') }}" class="rounded" width="100%">

          <h4 class="text-comercial"><i class="fa fa-phone fa-lg"></i>&nbsp;053 2 634104 - 053 2 626145</h4>
          <h4 class="text-comercial"><i class="fa fa-envelope fa-lg"></i>&nbsp; <a class="text-info" href="">ventas@fremartec.cl</a></h4>
          <h4 class="text-comercial"><i class="fa fa-home fa-lg"></i>&nbsp;Avda David Perry Nº 45 - Ovalle</h4>
          <br><br>
        </div>

      </div>

    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="download" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title text-left text-muted" id="myModalLabel"><i class="fa fa-download"></i>&nbsp;Descargar</h4>
          </div>
          <div class="modal-body">
            <form name="userForm" novalidate>
              <div class="form-group">
                <h5 class="text-left text-muted"><strong>Ingresa tu Correo Electrónico</strong></h5>
                <input type="email" class="form-control" ng-model="email" name="email" placeholder="Email" required autofocus></input>
              </div>
              <div class="alert alert-success" role="alert" ng-show="visible">
                <strong><i class="fa fa-check-circle"></i>&emsp;Gracias</strong> por preferir Fremartec.
              </div>
              <div class="modal-footer">
                <a type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i>&nbsp;Cerrar</a>
                <button class="btn btn-primary" ng-disabled="userForm.$invalid" ng-click="download_save()"><i class="fa fa-download" data-dismiss="modal"></i>&nbsp;Descargar</button>
              </div>
            </form>
        </div>
      </div>
  </div>
</div>

{% endblock %}
