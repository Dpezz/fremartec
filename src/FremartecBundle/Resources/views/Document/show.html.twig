{% extends 'FremartecBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Nuevo Documento"%}

{% block menu_admin_documentos %}class="active"{% endblock %}

{% block content %}
    <h1>Documento</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{{ entity.createAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('document') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('document_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
